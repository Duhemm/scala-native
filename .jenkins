pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                ansiColor('xterm') {
                    echo 'Setup...'
                    sh 'bin/travis_setup.sh'
                }
            }
        }
        stage('Formatting') {
            steps {
                ansiColor('xterm') {
                    echo 'Checking formatting...'
                    sh 'bin/scalafmt --test'
                    // sh 'bin/clangfmt --test'
                }
            }
        }
        stage('Build') {
            steps {
                ansiColor('xterm') {
                    echo 'Building..'
                    sh 'sbt -J-Xmx3G rebuild'
                }
            }
        }
        stage('Test') {
            steps {
                ansiColor('xterm') {
                    echo 'Testing...'
                    sh 'sbt test-all'
                }
            }
        }
        stage('Caching...') {
            steps {
                ansiColor('xterm') {
                    echo 'Maybe someday.'
                }
            }
        }
    }
}

